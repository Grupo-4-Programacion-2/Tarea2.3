<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea2._3.MainPage">


    <StackLayout>
        <Entry x:Name="DescriptionEntry" Placeholder="Descripción del audio" />
        <Button Text="Grabar Audio" Clicked="OnRecordClicked" />
        <Button Text="Guardar Audio" Clicked="OnSaveClicked" />

        <!-- Agregamos el botón para ir a la lista de audios -->
        <Button Text="Ver Lista de Audios" Clicked="OnViewListClicked" />
    </StackLayout>
</ContentPage>
